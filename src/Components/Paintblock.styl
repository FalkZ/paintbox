.Paintblock
  display inline-block
  margin 20px
  margin-left 0
  margin-bottom 0
  text-align center
  color white
  width 140px
  height 100px
  border-radius 8px
  line-height 50px
  position: relative;
  overflow: hidden;
  background-size: cover;
  white-space: nowrap;
  &:before
    box-shadow: inset 2px 2px 36px -15px rgba(0,0,0,1);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    content: "";

  *
    font-family: 'Lato', sans-serif;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);

  .name
    //text-transform: uppercase;
    font-size: 15px
    font-weight: bold;


  .preview
    overflow: hidden;
    height: 50%;

    &:before
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 50%;
      content: "";

    *
      transition: margin 0.5s ease-out

    &:hover > .name
      margin-top -50px

  .hexcode
    font-size: 15px
    font-weight: lighter;
    span
      font-weight: light;
      padding: 0 1px
  >.hexcode:before
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 50%;
      content: "";
